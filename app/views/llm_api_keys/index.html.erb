<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="mb-6">
    <div class="flex justify-between items-center">
      <h2 class="text-2xl font-bold text-gray-900">API Key Management</h2>
      <%= link_to "Back to Profile", user_path(current_user), class: "text-sm bg-gray-100 text-gray-700 px-3 py-1 rounded-md hover:bg-gray-200 transition-colors" %>
    </div>
  </div>

  <div class="space-y-6">
    <!-- Existing API Keys List -->
    <div class="bg-white shadow-md rounded-lg overflow-hidden">
      <div class="px-6 py-4 bg-gray-50 border-b border-gray-200">
        <h4 class="text-lg font-semibold text-gray-900">Registered API Keys</h4>
      </div>
      <div class="px-6 py-4">
        <% if @llm_api_keys.any? %>
          <div class="space-y-3">
            <% @llm_api_keys.each do |api_key| %>
              <div class="flex items-center justify-between p-4 bg-gray-50 rounded-lg border">
                <div class="flex-1">
                  <div class="flex items-center space-x-3 mb-2">
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-black text-white">
                      <%= api_key.llm_type %>
                    </span>
                    <% if api_key.description.present? %>
                      <span class="text-sm text-gray-600"><%= api_key.description %></span>
                    <% end %>
                  </div>
                  <div class="space-y-1">
                    <span class="text-sm font-medium text-gray-700">Created:</span>
                    <span class="text-sm text-gray-600"><%= api_key.created_at.strftime("%Y/%m/%d %H:%M") %></span>
                    <% if api_key.created_at < api_key.updated_at %>
                      <span class="text-sm font-medium text-gray-700 ml-2">Updated:</span>
                      <span class="text-sm text-gray-600"><%= api_key.updated_at.strftime("%Y/%m/%d %H:%M") %></span>
                    <% end %>
                  </div>
                </div>
                <div class="flex flex-col space-y-2 ml-4">
                  <button type="button" class="text-sm bg-yellow-100 text-yellow-700 px-3 py-1 rounded-md hover:bg-yellow-200 transition-colors"
                          popovertarget="updateModal<%= api_key.id %>">
                    Update
                  </button>
                  <%#= link_to "Delete", user_llm_api_key_path(current_user, api_key),
                              class: "text-sm bg-red-100 text-red-700 px-3 py-1 rounded-md hover:bg-red-200 transition-colors text-center",
                              data: {
                                turbo_method: :delete,
                                turbo_confirm: "Are you sure you want to delete this API key?"
                              } %>
                </div>
              </div>

              <!-- Update Modal -->
              <div id="updateModal<%= api_key.id %>" popover class="m-0 p-0 border-0 bg-transparent max-w-none max-h-none">
                <div class="fixed inset-0 bg-white/30 backdrop-blur-md flex items-center justify-center">
                  <div class="relative p-5 border w-96 shadow-lg rounded-md bg-white">
                    <%= form_with url: user_llm_api_key_path(current_user, api_key), method: :patch, local: true do |form| %>
                    <div class="mb-4">
                      <h5 class="text-lg font-semibold text-gray-900 mb-4">Update API Key - <%= api_key.llm_type %></h5>
                      <button type="button" class="absolute top-3 right-3 text-gray-400 hover:text-gray-600" onclick="document.getElementById('updateModal<%= api_key.id %>').hidePopover()">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                        </svg>
                      </button>
                    </div>
                    <div class="mb-6">
                      <%= hidden_field_tag :key_id, api_key.id %>
                      <div class="mb-4">
                        <label for="api_key_<%= api_key.id %>" class="block font-medium text-gray-700 mb-2">New API Key (Optional)</label>
                        <%= password_field_tag :api_key, "",
                                               class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500",
                                               id: "api_key_#{api_key.id}",
                                               placeholder: "Enter new API key" %>
                      </div>
                      <div class="mb-4">
                        <label for="description_<%= api_key.id %>" class="block font-medium text-gray-700 mb-2">Description (Optional)</label>
                        <%= text_field_tag :description, api_key.description,
                                           class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500",
                                           id: "description_#{api_key.id}",
                                           placeholder: "Enter description for this API key (e.g., purpose or project name)" %>
                        <div class="text-sm text-gray-500 mt-1">
                          Enter a clear description such as the purpose or project name for this API key.
                        </div>
                      </div>
                      <div class="bg-yellow-50 border border-yellow-200 rounded-md p-4">
                        <p class="text-sm text-yellow-800">For security reasons, the current API key is not displayed.</p>
                      </div>
                    </div>
                    <div class="flex justify-end space-x-3">
                      <button type="button" class="px-4 py-2 text-sm bg-gray-100 text-gray-700 rounded-md hover:bg-gray-200 transition-colors" onclick="document.getElementById('updateModal<%= api_key.id %>').hidePopover()">
                        Cancel
                      </button>
                      <%= submit_tag "Update", class: "px-4 py-2 text-sm bg-yellow-600 text-white rounded-md hover:bg-yellow-700 transition-colors" %>
                    </div>
                  <% end %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="p-4 bg-gray-50 rounded-lg border border-dashed border-gray-300">
            <p class="text-gray-500 text-center mb-2">No API keys have been registered yet.</p>
            <p class="text-gray-500 text-center">Please add a new API key using the form below.</p>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Add New API Key Form -->
    <div class="bg-white shadow-md rounded-lg overflow-hidden">
      <div class="px-6 py-4 bg-gray-50 border-b border-gray-200">
        <h5 class="font-semibold text-gray-900">Add New API Key</h5>
      </div>
      <div class="px-6 py-4">
        <%= form_with url: user_llm_api_keys_path, method: :post, local: true do |form| %>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
            <div>
              <label for="llm_type" class="block font-medium text-gray-700 mb-2">LLM Type</label>
              <%= select_tag "llm_api_key[llm_type]",
                             options_for_select([
                                                  ['OpenAI', 'OpenAI'],
                                                  ['Anthropic', 'Anthropic'],
                                                  ['Google', 'Google'],
                                                  ['Ollama', 'Ollama']
                                                ], ''),
                             { class: "w-full px-3 py-2 border border-gray-300 bg-white rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500", prompt: "Select LLM Type", required: true } %>
            </div>

            <div class="col-start-1 col-span-2">
              <label for="api_key" class="block font-medium text-gray-700 mb-2">API Key</label>
              <%= password_field_tag "llm_api_key[api_key]", "",
                                     class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500",
                                     placeholder: "Enter API key",
                                     required: true %>
              <p class="text-sm text-gray-500 mt-1">
                API keys are encrypted and stored securely.
              </p>
            </div>
            <div class="col-span-2">
              <label for="description" class="block font-medium text-gray-700 mb-2">Description (Optional)</label>
              <%= text_field_tag "llm_api_key[description]", "",
                                  class: "w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500",
                                  placeholder: "Enter description for this API key (e.g., purpose or project name)" %>
              <div class="text-sm text-gray-500 mt-1">
                Enter a clear description such as the purpose or project name for this API key.
              </div>
            </div>
          </div>

          <div class="flex items-center justify-end">
            <%= submit_tag "Add API Key", class: "bg-blue-600 text-white px-6 py-2 rounded-md hover:bg-blue-700 transition-colors" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
